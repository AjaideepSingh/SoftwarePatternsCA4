<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.softwarepatternsca4">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoftwarePatternsCA4">

        <activity android:name="Authentication.LogIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:theme="@style/Theme.test" />
        <activity android:name="Authentication.SignUp" />
        <activity
            android:name=".StockManager"
            android:theme="@style/Theme.test" />
        <activity android:name=".Settings" />
        <activity android:name=".Checkout" />
        <activity
            android:name=".Reviews"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".Orders" />
        <activity android:name="UsersDetails" />
    </application>

</manifest>